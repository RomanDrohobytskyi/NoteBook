<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.notebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".note.NoteActivity"
            android:label="New note"
            ></activity>
        <activity
            android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.mainscreen.Welcome" />
        <activity android:name=".login.account.SplashActivity" />
        <activity android:name=".login.account.EnterPasswordActivity" />
        <activity android:name=".MainActivity"
            android:label="Notes"/>
        <activity android:name=".login.account.LoginActivity" />
        <activity
            android:name=".SingUpActivity"
            android:label="Registration" />
        <activity android:name=".NewNoteActivity" />
        <activity android:name=".MainScreen" />
    </application>

</manifest>
